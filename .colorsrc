color_help()
{
    echo "How to use terminal colors:"
    echo "Call its function, which is just it's color name."
    echo "Set the \$FORMAT variable to change the printf formatting."
}

format()
{
    if [ -z $@ ]
    then
        FORMAT="%s\n"
    else
        FORMAT="$@"
    fi
}


dim() {
	printf $FORMAT ${DIM}"$@"${RESET} >&2
}
